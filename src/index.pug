- var page_title = "WISS 2024: 第32回インタラクティブシステムとソフトウェアに関するワークショップ"
- var logo_path = "./assets/logo/logo.png"
- var logo_size = 260
-
  var headlines = [
    '2024/10/16: 参加登録を開始しました. ',
    '2024/09/1: デモ発表，WISS Challengeの受付を開始しました. ',
    '2024/07/1: 登壇発表，国際学会招待発表の受付を開始しました. ',
    '2024/07/1: WISS Challenge，WISS Design，学生ボランティアの募集ページを公開しました. ',
    '2024/06/15: Webサイト公開．登壇発表，国際学会招待発表，デモ発表の募集ページを公開しました. ',
  ]


doctype html
html(lang=ja)
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    include includes/seo
    title #{page_title}
    include includes/bootstrap-css
    link(rel="stylesheet" href="./css/override.css")
  body
    include includes/header
    .jumbotron#top
      .container.text-center
        img(src="./assets/textures/texture.jpg" style="object-fit: cover; object-position: 50% 50%; width: 100%; height: 100%; mix-blend-mode: overlay; position: absolute; top: 0%; left: 0%; opacity: 20%; pointer-events: none; z-index: 2;")
        img.img-fluid(src=logo_path style="max-height: " + logo_size + "px;")
        hr
        p.lead WISS 2024: 第32回インタラクティブシステムとソフトウェアに関するワークショップ
    .container.content
      if headlines.length != 0
        .alert.alert-primary 
          p(style="margin-bottom: 0px;") 最近の主な更新内容：
          ul(style="margin: 0px;")
            each headline in headlines
              li !{headline}
      include:markdown-it(html=true typographer=true) md/index.md
      include includes/sponsors
    include includes/footer
    include includes/bootstrap-js